generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Blog[]

  @@map("users")
}

model Blog {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  content     String
  thumbnail   String
  isDeleted   Boolean  @default(false)
  isPublished Boolean  @default(false)
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author User @relation(fields: [authorId], references: [id])

  @@map("blogs")
}

model Skill {
  id        String  @id @default(cuid()) @map("_id")
  name      String
  logo      String
  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Project {
  id               String   @id @default(uuid()) @map("_id")
  title            String
  shortDescription String
  longDescription  String
  thumbnail        String
  liveLink         String
  technologies     String[]

  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Experience {
  id          String    @id @default(uuid()) @map("_id")
  companyName String
  position    String
  startDate   DateTime
  endDate     DateTime?
  description String?

  isDeleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("experiences")
}
